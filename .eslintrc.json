{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": ["standard"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "quotes": [1, "single", { "avoidEscape": true }],
    "semi": [1, "always"],
    "comma-dangle": [0],
    "space-before-function-paren": "off"
  }
}
